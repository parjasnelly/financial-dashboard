<form method="post" action="<%= options.url %>">
    <h1 class="h3 mb-3 fw-normal"><%= options.formName %></h1>
    <% if(error){%>
        <div class="alert alert-danger" role="alert">
            <%= error.message%>
        </div>
    <% }%>
    <div class="form-floating">
        <%if(options.item) {%>
            <input type="hidden" class="form-control" id="floatingInput" placeholder="ID" name="id" value="<%= options.item.id%>">
        <%} else {%>
            <input type="hidden" class="form-control" id="floatingInput" placeholder="ID" name="id">
        <%}%>
    </div>
    <div class="form-floating">
        <%if(options.item) {%>
            <input type="text" class="form-control" id="floatingInput" placeholder="Nome" name="name"value="<%= options.item.name%>">
        <%} else {%>
            <input type="text" class="form-control" id="floatingInput" placeholder="Nome" name="name">
        <%}%>

        <label for="floatingInput">Nome</label>
    </div>

    <div class="form-floating">
        <%if(options.item) {%>
            <input type="number" step="0.01" min="0" class="form-control" id="floatingInput" placeholder="Descrição da Categoria" name="value"value="<%= options.item.value%>">
        <%} else {%>
            <input type="number" step="0.01" min="0" class="form-control" id="floatingInput" placeholder="Descrição da Categoria" name="value">
        <%}%>
        <label for="floatingInput">Valor</label>
    </div>
    <button class="w-100 btn btn-lg btn-primary" type="submit">Salvar</button>
</form>